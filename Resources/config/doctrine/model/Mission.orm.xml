<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
>

    <entity name="NIM\MissionBundle\Model\Mission" table="nim_mission">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="title">
            <gedmo:translatable/>
        </field>

        <field name="description" nullable="true">
            <gedmo:translatable/>
        </field>

        <field name="country" />

        <field name="startedAt" type="date" />

        <field name="endedAt" type="date" nullable="true"/>

        <one-to-many field="translations" target-entity="NIM\MissionBundle\Model\MissionTranslation" mapped-by="object">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>

        <gedmo:translation entity="NIM\MissionBundle\Model\MissionTranslation" locale="locale"/>

        <!--<many-to-many field="workers" mapped-by="missions" target-entity="NIM\WorkerBundle\Model\Worker"/>-->
    </entity>
</doctrine-mapping>
