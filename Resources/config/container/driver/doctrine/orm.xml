<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.repository.mission.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
    </parameters>

    <services>
        <service id="nim.manager.mission" alias="doctrine.orm.entity_manager" />
        <service id="nim.repository.mission" class="%nim.repository.mission.class%">
            <argument type="service" id="nim.manager.mission" />
            <argument type="service">
                <service
                        factory-service="nim.manager.mission"
                        factory-method="getClassMetadata"
                        class="Doctrine\ORM\Mapping\ClassMetadata"
                        >
                    <argument>%nim.model.mission.class%</argument>
                </service>
            </argument>
        </service>
    </services>
</container>